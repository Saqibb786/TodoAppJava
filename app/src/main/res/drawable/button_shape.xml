<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#3700B3" /> <!-- Darker purple for pressed state -->
            <corners android:radius="16dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#6200EE" /> <!-- Original purple color -->
            <corners android:radius="16dp" />
        </shape>
    </item>
</selector>