<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#B71C1C" /> <!-- Darker red for pressed state -->
            <corners android:radius="16dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#D32F2F" /> <!-- Dark red color -->
            <corners android:radius="16dp" />
        </shape>
    </item>
</selector>